 <% @comments.each do |c| %>
   <hr>
   <j>
     <%= c.comment %>
   - Commented by <%= c.user.name %>
     <% if user_signed_in? && (current_user == @event.user || current_user.admin?) %>
     <%= link_to "Delete", event_comment_path(c.event_id,c.id), method: :delete ,class:"btn btn-danger"  %>
       <%= link_to "Edit", edit_event_comment_path(c.event_id,c.id),class:"btn btn-primary"  %>
   </j>
       <% end %>

 <% end %>