<div class="card" style="width: 45rem;">
  <div class="card-header">
    <h4>Edit <%= resource_name.to_s.humanize %></h4>
  </div>
  <%= javascript_pack_tag "auto-complete", "data-turbolinks-track" => true %>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name,class:"form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field form-group">
        <%= f.label :username %><br />
        <%= f.text_field :username,class:"form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field form-group">
        <%= f.label :phone_no %><br />
        <%= f.text_field :phone_no,class:"form-control", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field form-group">
        <%= f.fields_for :address do |contact_detail_form| %>
          <%= contact_detail_form.label "Location" %>
          <%= contact_detail_form.text_field :location,class:"form-control",id:"autocomplete", onFocus:"geolocate()", placeholder: "Enter Address to fill the form" %>
          </br>
          <%= contact_detail_form.label "Street Address" %>
          <%= contact_detail_form.text_field :street_address,class:"form-control",id:"street_number" %>
          </br>
          <%= contact_detail_form.label "City" %>
          <%= contact_detail_form.text_field :city,class:"form-control", id:"locality" %>
          </br>
          <%= contact_detail_form.label "State" %>
          <%= contact_detail_form.text_field :state,class:"form-control", id:"administrative_area_level_1" %>
          </br>
          <%= contact_detail_form.label "Zip Code" %>
          <%= contact_detail_form.text_field :zip,class:"form-control", id:"postal_code" %>
          </br>
          <%= contact_detail_form.label "Country" %>
          <%= contact_detail_form.text_field :country,class:"form-control", id:"country" %>
          </br>
          <%= contact_detail_form.label "Latitude" %>
          <%= contact_detail_form.text_field :latitude,class:"form-control",id:"loc_lat" %>
          </br>
          <%= contact_detail_form.label "Longitude" %>
          <%= contact_detail_form.text_field :longitude,class:"form-control", id:"loc_long" %>
        <%end %>
      </div></br>

      <div class="field form-group">
        <%= f.label :role %><br />
        <%= f.select :role,User:"User",Admin:"Admin" %>
      </div>
      </br>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email,class:"form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password,class:"form-control", autocomplete: "new-password" %>
        <% if @minimum_password_length %>

          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div></br>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation,class:"form-control", autocomplete: "new-password" %>
      </div>

      <div class="field form-group">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password,class:"form-control", autocomplete: "current-password" %>
      </div>
      </br>
      <div class="actions">
        <%= f.submit "Update",class:'btn btn-primary' %>
      </div>
    <% end %>
    </br>

    <div class="card">
      <div class="card-body">
        <h3>Cancel my account</h3>
        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:"btn btn-danger" %></p>

        <%= link_to "Back", :back,class:"btn btn-info" %>
      </div>
    </div>
  </div>
</div>









